@model Telmexla.Servicios.DIME.Entity.ArbolesMidas
@{
    ViewBag.Title = "Administrar Arboles";
    ViewBag.SubTitle = "Midas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AdministrarArboles", "Midas", FormMethod.Post, new { id = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="box box-danger" style="padding-left:5px;">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                </div>
            </div>
        </div>
        <h2 class="page-header" style="margin-top: 0px; margin-left:1px;">
            <i class="fa fa-code-fork"></i> Información del Arbol
        </h2>
        <div id="ARBOL" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; padding-right:10px;">
            <br />
            <table>
                <tr>
                    <td style="padding-left:1px; width:200px;">
                        <small>Id Árbol</small>
                        @Html.TextBoxFor(m => m.IdArbol, new { @class = "form-control input-sm", @readonly = "true", @Id = "IdArbol" })
                    </td>
                    <td style="padding-left:1px; width:280px;">
                        <small>Id Padre</small>
                        @Html.TextBoxFor(m => m.IdPadre, new { @class = "form-control input-sm", @Id = "IdPadre", @readonly = "true" })
                    </td>
                    <td style="padding-left:1px; width:280px;">
                        <small>Descripción</small>
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control input-sm", @Id = "Descripcion" })
                    </td>
                    <td style="padding-left:4px; width:280px;">
                        <small>Estado del Árbol</small>
                        @Html.DropDownListFor(m => m.EstadoArbol, new List<SelectListItem> {new SelectListItem{Text="ACTIVO", Value="ACTIVO" },
                                                                                             new SelectListItem{Text="INACTIVO", Value="INACTIVO" }},
                                                                                                              "--SELECCIONE--", new { @class = "form-control input-sm" })
                    </td>
                </tr>

            </table>
        </div>
        <br />
    </div>

    <div class="box box-danger">
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-block btn-primary" name="GRARDARDATOS" value="true" style="width:10%;  margin-left:1%;">Guardar</button><br />

    </div>
}

