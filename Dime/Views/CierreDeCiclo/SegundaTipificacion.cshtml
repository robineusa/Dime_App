@model Telmexla.Servicios.DIME.Entity.CcSegundaTipificacion
@{
    ViewBag.Title = "Segunda Tipificación";
}


@if (Session["Cierre Ciclo Residencial Predictivo"] != null || Session["Cierre Ciclo Pymes"] != null)
{
    if (Model.TipoCierre.Equals("Residencial Predictivo"))
    {
    <form method="get" action="@Url.Action("ResidencialPredictivoConsulta","CierreDeCiclo")">
        <button type="submit" class="btn btn-success">Seguir con Residencial Predictivo</button>
    </form>
    <br />

    }
    using (Html.BeginForm("SegundaTipificacionPost", "CierreDeCiclo", FormMethod.Post, new { role = "form", onkeydown = "return event.keyCode!=13" }))
    {
        <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">

            <div role="tabpanel" class="tab-pane tab-dime-first" id="datosAdicionales" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;">
                <table>
                    <tr>
                        <td style="padding:1px;"><br /></td>
                    </tr>
                    <tr>

                        <td width="200" style="padding:1px;">
                            <small>Cuenta:  </small>
                        </td>
                        <td width="200" style="padding:1px;">
                            <small>Nombre:  </small>
                        </td>
                        <td width="200" style="padding:1px;">
                            <small>Ciudad:  </small>
                        </td>
                        <td width="200" style="padding:1px;">
                            <small>Teléfono 1:  </small>
                        </td>
                        <td width="200" style="padding:1px;">
                            <small>Teléfono 2:  </small>
                        </td>
                        <td width="200" style="padding:1px;">
                            <small>Tel. Adicional 1:</small>
                        </td>
                    </tr>
                    <tr>

                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Cuenta, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Telefono1, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Telefono2, new { @class = "form-control input-sm", @readonly = "true" })

                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.TelfAdicional1, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                    </tr>

                    <tr>

                        <td style="padding:1px;">
                            <small>Nombre Contacto:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Servicio:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Tipo Cliente:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>División:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Comunidad:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Úsuario:</small>
                        </td>
                    </tr>
                    <tr>

                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.NombreContacto, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Servicio, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.TipoCliente, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Division, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Comunidad, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                    </tr>
                    <tr>

                        <td style="padding:1px;">
                            <small>Nodo:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Aliado:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Canal:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Operación:  </small>
                        </td>
                        <td style="padding:1px;">
                            <small>Detalle Informe:  </small>
                        </td>
                        <td style="padding:1px;"></td>
                    </tr>
                    <tr>

                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Nodo, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Aliado, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Canal, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.Operacion, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;">
                            @Html.TextBoxFor(m => m.DetalleInforme, new { @class = "form-control input-sm", @readonly = "true" })
                        </td>
                        <td style="padding:1px;"></td>
                    </tr>

                </table>
            </div>
        </div>
        <br />
        <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">

            <div role="tabpanel" class="tab-pane tab-dime-first" id="datosAdicionales" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;">
                <br />
                <div class="row">
                    <div class="col-sm-2">
                        <small>Macro Proceso:</small>
                        @Html.DropDownListFor(m => m.Macroproceso,
                      new List<SelectListItem> { new SelectListItem { Text = "No", Value = "No" }, new SelectListItem { Text = "Si", Value = "Si" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlMacroproceso", required = "required" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <small>Clasificación:</small>
                        @Html.DropDownListFor(m => m.Clasificacion,
                   new List<SelectListItem> { new SelectListItem { Text = "", Value = "" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlClasificacion" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <small>Problema del Cliente:</small>
                        @Html.DropDownListFor(m => m.ProblemaDelCliente,
                   new List<SelectListItem> { new SelectListItem { Text = "", Value = "" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlProblemaCliente" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <small>Soporte Dado:</small>
                        @Html.DropDownListFor(m => m.SoporteDado,
                   new List<SelectListItem> { new SelectListItem { Text = "", Value = "" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlSoporteDado" })
                    </div>
                    <div class="col-sm-6">
                        <small>Estado Cliente:</small>
                        @Html.DropDownListFor(m => m.EstadoCliente,
                   new List<SelectListItem> { new SelectListItem { Text = "", Value = "" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlEstadoCliente" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <small>Seguimiento:</small>
                        @Html.DropDownListFor(m => m.Seguimiento,
                   new List<SelectListItem> { new SelectListItem { Text = "", Value = "" } }, "Seleccione", new { @class = "form-control input-sm select2", id = "ddlSeguimiento", @disabled = "true" })
                    </div>

                </div>
            </div>
        </div>
        <br />

        <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">

            <div role="tabpanel" class="tab-pane tab-dime-first" id="datosAdicionales" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;">
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <small>Observación:</small>
                        @Html.TextAreaFor(m => m.Observacion, new { @style = "width: 74%; height: 80px; resize: none; display:block ;" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        @Html.HiddenFor(m => m.IdGestionado)
        @Html.HiddenFor(m => m.TipoCierre)
        <button type="submit" style="display:block; width:15%; height: 40px" class="btn btn-primary" id="submitGetDatos">Guardar</button>

        }
        }
        else
        {
        <div class="row">

            <div class="box box-primary">

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="error-page">
                                <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                                <div class="error-content">
                                    <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                    <p style="text-align:justify;">
                                        La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                        Por favor solicite al administrador del sistema el acceso correspondiente.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }



