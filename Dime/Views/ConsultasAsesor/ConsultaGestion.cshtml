
@{
    ViewBag.Title = "Consulta de Gestion";
    ViewBag.Subtitle = "Consultas Asesor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h4 class="box-title"> <i class="fa fa-calendar"></i> Rango de Fechas</h4>
            </div>
            <div class="box-body">
                <div class="col-md-3" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px; ">
                    <div class="box-body">
                        <table style="margin-bottom: 0px;">
                            <tr>
                                <td style="padding:1px;">
                                    <small>Seleccione Fecha inicial: </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Seleccione Fecha final: </small>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:1px;">
                                    <input type="text" class="form-control input-sm" id="Fecha_Inicial" placeholder="Fecha Inicial" />
                                </td>
                                <td style="padding:1px;">
                                    <input type="text" class="form-control input-sm" id="Fecha_Final" placeholder="Fecha Final"  />
                                </td>
                            </tr>
                        </table>
                       <span><label id="warningLabel" style="color:red"></label></span>
                    </div>
        
               
                </div>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2><i class="fa fa-search"></i> Resultados de Búsqueda:</h2><br />
                                <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                    <div class="box-body">
                                        <div  id="gridViewConsultaGestion"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>  

</div>

