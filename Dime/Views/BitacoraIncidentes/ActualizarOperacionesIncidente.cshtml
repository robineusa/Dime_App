@model Telmexla.Servicios.DIME.Entity.ViewModelBitacoraIncidentes
@{
    ViewBag.Title = "Actualizar Operaciones Por Incidente";
    ViewBag.SubTitle = "Procesos - COS";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">

                        <a href="@Url.Action("RegistrarOperacionesIncidente", "BitacoraIncidentes",new {IdRegistro=Model.BILBitacoraIncidentes.IdRegistro})" style="margin-right:15px; float:right;">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <span class="glyphicon-class" style="font-size:medium;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Agregar Nueva Operación</span>
                            </a>
                        @Html.HiddenFor(m => m.BILBitacoraIncidentes.IdRegistro, new { @class = "form-control input-sm", @Id = "idRegistro" })
                        <h2 class="page-header" style="margin-top:25px"><i class="fa fa-list-alt"></i> Lista de Operaciones Actuales:</h2>
                        <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                            <div class="box-body">
                                <div id="dataLoading" style="display:none;text-align:center;width:100%;height:auto;">
                                    <div><img src="~/Resources/Images/Loading.gif" height="100" width="100" /></div>
                                </div>
                                <div id="gridViewConsulta"></div>
                            </div>
                        </div>
                        <br />
                        <a style="width:80px;" class="btn btn-block btn-primary" href="@Url.Action("VisualizadordeIncidentes", "BitacoraIncidentes",new {IdRegistro=Model.BILBitacoraIncidentes.IdRegistro})">Omitir </a><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<button id="submitDatos" type="submit" class="btn btn-primary" value="true" style="width:10%; height:40px; display:none;">Guardar Datos</button>

@section scripts{
    <script>
        var UrlListadeOperaciones = '@Url.Action("ActualizarOperacionesIncidenteJson", "BitacoraIncidentes")';
        var UrlEliminarOperacion = '@Url.Action("EliminarOperacionIncidente", "BitacoraIncidentes")';
    </script>
    <script src="~/Scripts/BitacoraIncidentes/ActualizarOperacionesIncidente.js?1.0.2"></script>

}
