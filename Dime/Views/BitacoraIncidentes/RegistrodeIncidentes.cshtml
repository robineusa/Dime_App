@model Telmexla.Servicios.DIME.Entity.ViewModelBitacoraIncidentes
@{
    ViewBag.Title = "Registro de Incidentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["Registrar Incidente - COS"] != null)
{
    using (Html.BeginForm("RegistrodeIncidentes", "BitacoraIncidentes", FormMethod.Post, new { id = "Registro", role = "form" }))
    {
        <div class="row">
            <div class="col-md-9" style="width:100%; ">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li id="Li1" style="background-color: #dcdcdc; border-color: #c23321" class="active"><a href="#solicitudcreaciondireccion" aria-controls="solicitudcreaciondireccion" data-toggle="tab" role="tab" style="background-color:#dcdcdc;">Incidente</a></li>

                    </ul>

                    <div class="tab-content" style="padding-left:0; padding-top: 0">
                        <div role="tabpanel" class="tab-pane tab-dime-first active" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;" id="solicitudcreaciondireccion">
                            <br />
                            <table>
                                <tr>

                                    <td style="padding-left:4px; width:300px;">
                                        <small>Caso SD</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.CasoSD, new { @class = "form-control input-sm", @Id = "CasoSD" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>IM</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.IM, new { @class = "form-control input-sm", @Id = "IM" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Fecha de Creación Ticket</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.FechaDeCreacionTicket, new { @class = "form-control input-sm", @Id = "FechaCreacionTicket" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Fecha de Cierre Ticket</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.FechaDeCierreTicket, new { @class = "form-control input-sm", @Id = "FechaCierreTicket" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Fecha de Cierre Afectación</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.FechaDeCierreAfectacion, new { @class = "form-control input-sm", @Id = "FechaCierreAfectacion" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Horas de Afectación</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.HorasDeAfectacion, new { @class = "form-control input-sm", @Id = "HorasAfectacion", @readonly = "true" })
                                    </td>
                                   
                                </tr>
                                <tr>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Días de Afectación</small>
                                        @Html.TextBoxFor(m => m.BitacoraIncidentes.DiasDeAfectacion, new { @class = "form-control input-sm", @Id = "DiasAfectacion", @readonly = "true" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Herramienta</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.Herramienta, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "Herramienta", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Tipo de Falla</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.TipoDeFalla, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "TipoDeFalla", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Módulo Afectado</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.ModuloAfectado, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "ModuloAfectado", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Prioridad</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.Prioridad, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "Prioridad", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Gerencia</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.Gerencia, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "Gerencia", @class = "form-control" })
                                    </td>
                                   
                                   
                                </tr>
                                <tr>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Aliado Que Reporta</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.AliadoQueReporta, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "AliadoQueReporta", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Operación Que Reporta</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.OperacionQueReporta, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "OperacionQueReporta", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Escalado A</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.EscaladoA, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "EscaladoA", @class = "form-control" })
                                    </td>

                                    <td style="padding-left:4px; width:300px;">
                                        <small>Usuarios Afectados</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.CantidadUsuariosAfectados, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "UsuariosAfectados", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Estado Del Caso</small>
                                        @Html.DropDownListFor(m => m.BitacoraIncidentes.EstadoDelCaso, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "EstadoCaso", @class = "form-control" })
                                    </td>
                                </tr>
                            </table>
                            <table>
                                <tr>
                                    <td colspan="7" style="padding:1px; width:1200px;">
                                        <small>Descripcion de la Afectación</small>
                                        @Html.TextAreaFor(m => m.BitacoraIncidentes.DescripcionAfectacion, new { @class = "form-control input-sm", style = "width:100%; height:70px;", type = "text" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="7" style="padding:1px; width:1200px;">
                                        <small>Comentarios de Cierre</small>
                                        @Html.TextAreaFor(m => m.BitacoraIncidentes.ComentariosDeCierre, new { @class = "form-control input-sm", style = "width:100%; height:70px;", type = "text" })
                                    </td>
                                </tr>
                            </table>

                        </div>
                        <br />
                        <button type="submit" class="btn btn-block btn-primary" name="GRARDARDATOS" value="true" style="width:10%;  margin-left:1%;">Guardar</button><br />
                    </div>
                </div>
            </div>

        </div>

    }

    @section Scripts{
        <script src="~/Scripts/BitacoraIncidentes/RegistrodeIncidentes.js?1.0.0"></script>
    }


}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

