@{
    ViewBag.Title = "Consulta Log Fuera de Niveles";
    ViewBag.Subtitle = "Blending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Consultas Administracion"] != null)
{
    using (Html.BeginForm("ConsultaAdminFueraNivelesLog", "DistribucionBlending", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">
            <div style="background-color:#dcdcdc; padding-top:15px; padding-left:15px; padding-bottom:15px;">
                <div class="row">
                    <div class="col-xs-4">
                        <table style="margin-left:10px;">
                            <tr>
                                <td style="width:200px; padding:1px;">
                                    <small>Seleccione Fecha Inicial:</small>
                                </td>
                                <td style="width:200px; padding:1px;">
                                    <small>Seleccione Fecha Final:</small>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <table>
                            <tr>
                                <td style="width:200px; padding:1px;">
                                    <input type="text" class="form-control input-sm" id="Fecha_Inicial" placeholder="Fecha Inicial" name="fechaInicial" />
                                </td>
                                <td style="width:200px; padding:1px;">
                                    <input type="text" class="form-control input-sm" id="Fecha_Final" placeholder="Fecha Final" name="fechaFinal" />
                                </td>
                            </tr>
                        </table>
                        <span><label id="warningLabel" style="color:red"></label></span>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="page-header" style="margin-top:25px"><i class="fa fa-search"></i> Resultados de Búsqueda:</h2>
                                <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                    <div class="box-body">
                                        <div id="dataLoading" style="display:none;text-align:center;width:100%;height:auto;">
                                            <div><img src="~/Resources/Images/Loading.gif" height="100" width="100" /></div>
                                        </div>
                                        <div id="gridViewConsulta"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button id="submitDatos" type="submit" class="btn btn-primary" value="true" style="width:10%; height:40px; display:none;">Guardar Datos</button>
        </div>
    }

    @section scripts{
        <script>
        var urllistacFueraNivelesLog = '@Url.Action("ConsultaAdminFueraNivelesLogJson", "DistribucionBlending")';
        </script>

        <script src="~/Scripts/Gestion_Blending/jquery.datetimepicker.full.js?1.0.2"></script>
        <link href="~/Styles/Elements/jquery.datetimepicker.css?1.0.1" rel="stylesheet" />
        <script src="~/Scripts/DistribucionBlending/ConsultaAdminFueraNivelesLog.js?1.0.6"></script>

    }
}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

