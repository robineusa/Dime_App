@model Telmexla.Servicios.DIME.Entity.POMSolicitudes
@{
    ViewBag.Title = "Encuesta de Satisfacción Cavs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("EncuestadeSatisfaccion", "EncuestaCav", FormMethod.Post, new { id = "pomdatos", role = "form", onkeydown = "return event.keyCode!=13" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-9" style="width:100%; ">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li id="Li1" style="background-color: #dcdcdc; border-color: #c23321" class="active"><a href="#pomsol" aria-controls="pomsol" data-toggle="tab" role="tab" style="background-color:#dcdcdc;">Registro de Solicitud</a></li>
                </ul>
                <div class="tab-content" style="padding-left:0; padding-top: 0">
                    <div role="tabpanel" class="tab-pane tab-dime-first active" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;" id="Pomsol">
                        <br />
                        <table>
                            <tr>
                                <td style="padding-left:4px; width:200px;">
                                    <small>Cuenta del Cliente</small>
                                    @Html.TextBoxFor(m => m.CuentaCliente, new { @class = "form-control input-sm", @Id = "cuenta" })
                                </td>
                                <td style="padding-left:4px; width:200px;">
                                    <small>Teléfono Celular</small>
                                    @Html.TextBoxFor(m => m.TelefonoCeluar, new { @class = "form-control input-sm", @Id = "celu", @maxlength = "10", @minlength = "10" })
                                </td>
                                <td style="padding-left:4px; width:200px;">
                                    <small>Teléfono de Contacto</small>
                                    @Html.TextBoxFor(m => m.TelefonoDeContacto, new { @class = "form-control input-sm", @Id = "contacto", @maxlength = "10", @minlength = "7" })
                                </td>
                                <td style="padding-left:4px; width:200px;">
                                    <small>Correo Electrónico</small>
                                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control input-sm", @Id = "correo", @type = "email" })
                                </td>
                                <td style="padding-left:4px; width:200px;">
                                    <small>Operación</small>
                                    @Html.DropDownListFor(m => m.Operacion, new List<SelectListItem> {new SelectListItem{Text="FIJA", Value="FIJA" },
                                                                                                      new SelectListItem{Text="MOVIL", Value="MOVIL" },
                                                                                                      new SelectListItem{Text="MULTIPLAY", Value="MULTIPLAY" }},
                                                                                                      "--SELECCIONE--", new { @class = "form-control input-sm",@id="operacion" })
                                </td>

                            </tr>
                            <tr>
                                <td></td>
                                <td>@Html.ValidationMessageFor(m => m.TelefonoCeluar, "", new { @class = "text-danger" })</td>
                                <td></td>
                                <td></td>
                                <td>@Html.ValidationMessageFor(m => m.Operacion, "", new { @class = "text-danger" })</td>
                            </tr>
                        </table>
                        <h5 class="text-red"> @ViewBag.Mensaje</h5>
                    </div>
                    <br />
                    <button id="btnguardarpom" type="submit" class="btn btn-primary" onclick="Limpiar()" name="Guardar" value="true" style="width:10%; height:40px;">Guardar</button>
                </div>
            </div>
        </div>
    </div>

}

@section Scripts{
    @Scripts.Render("~/AdminLTEplugins/jquery-validate/js")
}