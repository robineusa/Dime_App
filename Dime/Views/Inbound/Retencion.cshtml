@model Telmexla.Servicios.DIME.Entity.InboundModel
@{
    ViewBag.Title = "Retención";
    ViewBag.SubTitle = "Gestión Inbound";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Retencion", "Inbound", FormMethod.Post, new { id = "datosCliente", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">
        <div style="background-color:#dcdcdc; padding-top:15px; padding-left:15px; padding-bottom:15px;">
            <div class="row">
                <div class="col-xs-2">
                    <small>Número de Cuenta:</small>
                </div>
                <div class="col-xs-2" style="width:200px; padding:1px;">
                    <small>Documento de Identidad:  </small>
                </div>
                <div class="col-xs-2" style="width:400px; padding:1px;">
                    <label class="text-danger" style="font-weight: 600;">@ViewBag.Error</label>
                </div>
                
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <table>
                        <tr>
                            <td style="padding:5px;">
                                @Html.TextBoxFor(m => m.Retencion.Cuenta, new { @class = "form-control input-sm", Id = "cuentaCliente", value = Model.Retencion.Cuenta })
                            </td>
                            <td style="min-width:200px;padding:1px;">
                                <input class="form-control input-sm" type="text" placeholder="Cedula" value="@Model.ClientesTodos.Cedula" readonly>
                            </td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-9" style="width:100%; ">

            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li id="Li1" class="active" style="background-color: #dcdcdc;  border-color: #da0e08 ;"><a href="#Datos_Basicos" style="background-color: transparent;" data-toggle="tab">Datos Básicos</a></li>
                    @*<li id="Li2"><a style="background-color: transparent;" href="#InformacionNiveles" data-toggle="tab">Pestaña 2</a></li>*@
                </ul>
                <div class="tab-content" style="padding-left:0; padding-top: 0">
                    <div class="active tab-pane" id="Datos_Basicos" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;">
                        <br />
                        <table>
                            <tr>
                                <td width="200" style="padding:1px;">
                                    <small>Nombre del Cliente:  </small>
                                </td>
                                <td width="200" style="padding:1px;">
                                    <small>Apellido del Cliente:  </small>
                                </td>

                                <td width="200" style="padding:1px;">
                                    <small>Teléfono Telmex:  </small>
                                </td>
                                <td width="200" style="padding:1px;">
                                    <small>Teléfono 1:  </small>
                                </td>
                                <td width="200" style="padding:1px;">
                                    <small>Teléfono 2: </small>
                                </td>
                                <td width="200" style="padding:1px;">
                                    <small>Teléfono 3:</small>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:1px;">
                                    @*@Html.TextBoxFor(m => Model.ClientesTodos.Nombre, new { @class = "form-control input-sm", name="Nombre_Cliente", Id = "Nombre_Cliente", value = Model.ClientesTodos.Nombre, placeholder = "Nombre del cliente", ReadOnly=true })*@
                                    <input id="Nombre_Cliente" class="form-control input-sm" type="text" placeholder="Nombre del cliente" value="@Model.ClientesTodos.Nombre" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input id="Apellido_Cliente" class="form-control input-sm" type="text" placeholder="Apellido del cliente" value="@Model.ClientesTodos.Apellido" readonly>
                                </td>

                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Teléfono telmex" value="@Model.ClientesTodos.TelefonoTelmex" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Teléfono 1" value="@Model.ClientesTodos.Telefono1" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Teléfono 2" value="@Model.ClientesTodos.Telefono2" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Teléfono 3" value="@Model.ClientesTodos.Telefono3" readonly>
                                </td>
                            </tr>
                            <tr>

                                <td style="padding:1px;">
                                    <small>Dirección de Instalación: </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Correspondencia:  </small>
                                </td>

                                <td style="padding:1px;">
                                    <small>Nodo: </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Red:  </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>División:  </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Área:  </small>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Dirección de instalación" value="@Model.ClientesTodos.DirInstalacion" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Correspondencia" value="@Model.ClientesTodos.DirCorrespondencia" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Nodo" value="@Model.ClientesTodos.Nodo" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Red" value="@Model.ClientesTodos.Red" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="División" value="@Model.ClientesTodos.Division" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Área" value="@Model.ClientesTodos.Area" readonly>
                                </td>
                            </tr>

                            <tr>

                                <td style="padding:1px;">
                                    <small>Zona:</small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Distrito:  </small>
                                </td>

                                <td style="padding:1px;">
                                    <small>Nombre Comunidad: </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Estrato:  </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Tipo de Cliente:  </small>
                                </td>
                                <td style="padding:1px;">
                                    <small>Descripción:  </small>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Zona" value="@Model.ClientesTodos.Zona" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Distrito" value="@Model.ClientesTodos.Distrito" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Nombre comunidad" value="@Model.ClientesTodos.NombreComunidad" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Estrato" value="@Model.ClientesTodos.Estrato" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Tipo de cliente" value="@Model.ClientesTodos.TipoCliente" readonly>
                                </td>
                                <td style="padding:1px;">
                                    <input class="form-control input-sm" type="text" placeholder="Descripción" value="@Model.ClientesTodos.Descripcion" readonly>
                                </td>
                            </tr>
                        </table>
                        <button type="submit" style="display:none;" id="BuscaCliente" name="BotonEnvia" value="Buscar">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="page-header" style="margin-top: 25px;">
                                <i class="fa fa-retweet"></i> Opción a escalar
                                @* <small class="pull-right">Date: 2/10/2014</small>*@
                            </h2>
                            <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                <br />
                                <table>
                                    <tr>
                                        <td width="200" style="padding:1px;" colspan="2">
                                            <small>Tipo de Escalamiento:  </small>
                                        </td>
                                        <td width="300" style="padding:1px;" colspan="2">
                                            <small>Detalle del Escalamiento:  </small>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            @Html.DropDownListFor(m => m.Retencion.Razon, new List<SelectListItem> {}, "--Seleccione--",
                                            new { @class = "form-control input-sm", style = "background-color:#f6f6f6;", id = "Escalamiento", onchange = "TraeDetalle()", value = Model.Retencion.Razon })
                                            
                                        </td>
                                        <td colspan="2">
                                            @Html.DropDownListFor(m => m.Retencion.SubRazon, new List<SelectListItem> {
                                            new SelectListItem { Text = "NO APLICA", Value = "NO APLICA" } }, "--Seleccione--",
                                            new { @class = "form-control input-sm", style = "background-color:#f6f6f6;", id = "Detalle", value = Model.Retencion.SubRazon })
                                            
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="page-header" style="margin-top: 25px;">
                                <i class="fa fa-comment-o"></i> Observaciones
                                @* <small class="pull-right">Date: 2/10/2014</small>*@
                            </h2>
                            <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                <br />
                                <table>
                                    <tr>
                                        <td style="padding:1px; width:1200px;">
                                            @Html.TextAreaFor(m => m.Retencion.Observaciones, new { @id = "RetencionObservaciones", @style = "width: 100%; height: 100px; resize: none; border:none;", value= Model.Retencion.Observaciones })
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-block btn-primary" id="BotonEnvia" name="BotonEnvia" value="GuardaDatos" style="width:10%;  margin-left:1%; display: none;">Guardar</button>

    </div>
}
@section Scripts{
    <script src="~/Scripts/Inbound/Retencion.js?1.0.3"></script>
}
