@model Telmexla.Servicios.DIME.Entity.ViewModelMec
@{ ViewBag.Title = "Registro y Actualización de Procesos";
    ViewBag.SubTitle = "Procesos Mec";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Administrar Procesos Mec"] != null)
{
    using (Html.BeginForm("AgregarNuevoProceso", "Mec", FormMethod.Post, new { id = "procesosmec", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">

                    </div>
                </div>
            </div>
            <a href="@Url.Action("AdministrarLineasMec", "Mec",new {IdProceso=Model.MecProcesos.IdProceso})" style="margin-right:15px; float:right;">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <span class="glyphicon-class" style="font-size:medium;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Administrar Líneas</span>
            </a>
            <a href="@Url.Action("ListaTipoAlarmas", "Mec",new {IdProceso=Model.MecProcesos.IdProceso})" style="margin-right:15px; float:right;">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <span class="glyphicon-class" style="font-size:medium;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Administrar Tipo de Alarmas</span>
            </a>
            <h2 class="page-header" style="margin-top: 0px; margin-left:1px;">
                <i class="fa fa-headphones"></i> Información del Proceso
            </h2>
            <div id="ARBOL" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; padding-right:10px;">
                <br />
                <table>
                    <tr>
                        <td style="padding-left:1px; width:200px;">
                            <small>Id del Proceso</small>
                            @Html.TextBoxFor(m => m.MecProcesos.IdProceso, new { @class = "form-control input-sm", @readonly = "true", @Id = "idproceso" })
                        </td>
                        <td style="padding-left:1px; width:280px;">
                            <small>Nombre del Proceso</small>
                            @Html.TextBoxFor(m => m.MecProcesos.Proceso, new { @class = "form-control input-sm", @Id = "proceso" })
                        </td>
                        <td style="padding-left:4px; width:280px;">
                            <small>Estado</small>
                            @Html.DropDownListFor(m => m.MecProcesos.Estado, new List<SelectListItem> {new SelectListItem{Text="ACTIVO", Value="ACTIVO" },
                                                                                             new SelectListItem{Text="INACTIVO", Value="INACTIVO" }},
                                                                                                              "--SELECCIONE--", new { @class = "form-control input-sm" })
                        </td>
                        
                    </tr>
                    
                </table>
            </div>
            <br />
        </div>
        
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">

                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-block btn-primary" name="GRARDARDATOS" value="true" style="width:10%;  margin-left:1%;">Guardar</button><br />

        </div>
    }

}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


