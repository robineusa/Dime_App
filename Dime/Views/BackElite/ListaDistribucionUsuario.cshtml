
@{ ViewBag.Title = "Administración Distribuciones Back Elite";
    ViewBag.SubTitle = "Procesos Back Elite";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Distribucion Back Elite"] != null)
{
    
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <table>
                                    <tr>
                                        <td style="width:300px; padding:1px;">
                                        <small>Cédula Usuario:</small>
                                                <input type="text" class="form-control input-sm" id="CedulaUsuario" placeholder="Ingrese la cédula del usuario" name="cedula"/>
                                        </td>
                                        
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <a href="~/BackElite/AdministrarDistrubucionBackElite" style="margin-right:15px; float:right;">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <span class="glyphicon-class" style="font-size:medium;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Agregar Nuevo Trabajo</span>
                                </a>
                                <h2 class="page-header" style="margin-top:25px"><i class="fa fa-list-alt"></i> Tipos de Trabajos Asignados:</h2>
                                <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                    <div class="box-body">
                                        <div id="dataLoading" style="display:none;text-align:center;width:100%;height:auto;">
                                            <div><img src="~/Resources/Images/Loading.gif" height="100" width="100" /></div>
                                        </div>
                                        <div id="gridViewConsulta"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button id="submitDatos" type="submit" class="btn btn-primary" value="true" style="width:10%; height:40px; display:none;">Guardar Datos</button>

    
    @section scripts{
        <script>
            var UrlListaProcesosAsignadosUsuarioJson = '@Url.Action("ListaProcesosAsignadosUsuarioJson", "BackElite")';
        </script>
        <script src="~/Scripts/BackElite/ListaDistribucionUsuario.js?1.0.0"></script>

    }
}

else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



