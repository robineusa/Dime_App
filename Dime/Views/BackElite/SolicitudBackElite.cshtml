@model Telmexla.Servicios.DIME.Entity.ViewModelBackElite
@{
    ViewBag.Title = "Registro de Solicitudes Back Elite";
    ViewBag.SubTitle = "Procesos Back Elite";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["Registrar Solicitud Back Elite"] != null)
{
    using (Html.BeginForm("SolicitudBackElite", "BackElite", FormMethod.Post, new { id = "datosCliente", role = "form" }))
    {
        <div class="row">
            <div class="col-md-9" style="width:100%; ">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li id="Li1" style="background-color: #dcdcdc; border-color: #c23321" class="active"><a href="#solicitudcreaciondireccion" aria-controls="solicitudcreaciondireccion" data-toggle="tab" role="tab" style="background-color:#dcdcdc;">Solicitud</a></li>

                    </ul>

                    <div class="tab-content" style="padding-left:0; padding-top: 0">
                        <div role="tabpanel" class="tab-pane tab-dime-first active" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px;" id="solicitudcreaciondireccion">
                            <br />
                            <table>
                                <tr>

                                    <td style="padding-left:4px; width:200px;">
                                        <small>Cuenta del Cliente</small>
                                        @Html.TextBoxFor(m => m.BEPSolicitudes.CuentaCliente, new { @class = "form-control input-sm", @Id = "CuentaCliente" })
                                   </td>
                                    <td style="padding-left:4px; width:200px;">
                                        <small>LlS / OT</small>
                                        @Html.TextBoxFor(m => m.BEPSolicitudes.LlsOt, new { @class = "form-control input-sm", @Id = "Llsot" })
                                    </td>
                                    <td style="padding-left:4px; width:200px;">
                                        <small>Nodo</small>
                                        @Html.TextBoxFor(m => m.BEPSolicitudes.Nodo, new { @class = "form-control input-sm", @Id = "Nodo" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.ValidationMessageFor(m => m.BEPSolicitudes.CuentaCliente, "", new { @class = "text-danger" })</td>
                                    <td>@Html.ValidationMessageFor(m => m.BEPSolicitudes.LlsOt, "", new { @class = "text-danger" })</td>
                                    <td>@Html.ValidationMessageFor(m => m.BEPSolicitudes.Nodo, "", new { @class = "text-danger" })</td>
                                </tr>
                                </table>
                            <table>
                                <tr>
                                    <td style="padding-left:4px; width:300px;">
                                        <small>Tipo de Escalamiento</small>
                                        @Html.DropDownListFor(m => m.BEPSolicitudes.TipoDeSolicitud, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "TipodeSolicitud", @class = "form-control" })
                                    </td>
                                    <td style="padding-left:4px; width:400px;">
                                        <small>Detalle de Escalamiento</small>
                                        @Html.DropDownListFor(m => m.BEPSolicitudes.DetalleDeSolicitud, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "DetalledeSolicitud", @class = "form-control" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>@Html.ValidationMessageFor(m => m.BEPSolicitudes.TipoDeSolicitud, "", new { @class = "text-danger" })</td>
                                    <td>@Html.ValidationMessageFor(m => m.BEPSolicitudes.DetalleDeSolicitud, "", new { @class = "text-danger" })</td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">

                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-block btn-primary" name="GRARDARDATOS" value="true" style="width:10%;  margin-left:1%;">Guardar</button><br />

        </div>
    }

    @section Scripts{

        @Scripts.Render("~/AdminLTEplugins/jquery-validate/js")
        <script>
            var urltipoescalamientos = '@Url.Action("ListaTipoDeEscalamientosJson", "BackElite")';
            var urldetalleescalamientos = '@Url.Action("ListaDetalleDeEscalamientosJson", "BackElite")';
        </script>
        <script src="~/Scripts/BackElite/SolicitudBackElite.js?1.0.0"></script>
    }


}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




