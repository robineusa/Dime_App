@model Telmexla.Servicios.DIME.Entity.Arbol
@{
    ViewBag.Title = "Administración de Árboles";
    ViewBag.Subtitle = "Check Técnico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Admin Arboles NoCheck"] != null)
{
    using (Html.BeginForm("AdminArboles", "Procesos", FormMethod.Post, new { id = "", role = "form", onkeydown = "return event.keyCode!=13" }))
    {
        @Html.AntiForgeryToken()
        <div class="callout callout-danger" style="margin-bottom: 0 ; background-color:rgb(255, 255, 255) !important; padding: 0 0 0 0; color: black !important;">
            <div style="background-color:#dcdcdc; padding-top:15px; padding-left:15px; padding-bottom:15px;">
                <div class="row" style="margin-left: 10px;">
                    <div class="col-xs-2" style="width:200px; padding:1px;">
                        <small>Nombre del Árbol:</small>
                    </div>
                    <div class="col-xs-2" style="width:200px; padding:1px;">
                        <small>Seleccione el Estado:</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4" style="width:200px;">
                        <table>
                            <tr>
                                <td style="padding:1px;">
                                    @*<input type="text" class="form-control input-sm" />*@
                                    @Html.TextBoxFor(m => m.NombreArbol, new { @class = "form-control input-sm", placeholder = "Ingrese el Nombre del Árbol", id = "" })
                                    @ViewBag.Mensaje
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-xs-4" style="width: 200px;">
                        <table>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(m => m.Estado, new { @class = "form-control input-sm", placeholder = "Ingrese el Estado", id = "" })
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-4" style="">
                        <button type="submit" value="Guardar" class="btn btn-primary" style="" name="Envia">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h2 class="page-header" style="margin-top:40px">
                        <i class="fa fa-th-list"></i> Lista De Arboles
                    </h2>
                    <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                        <br />
                        <div id="GridArboles"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts{

        <script>
            var urlListaArboles = '@Url.Action("ConsultaArboles", "Procesos")';
        </script>
        <script src="~/Scripts/Procesos/AdminArboles.js?1.0.0"></script>
    }
}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

