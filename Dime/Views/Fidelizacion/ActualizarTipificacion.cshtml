                    </div>
                    <div class="col-md-12">
                        <small>Activar</small>
                        @Html.DropDownListFor(r => r.Activo, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltActivo", @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.Activo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12">
                        <small>Nota</small>
                        @Html.TextAreaFor(r => r.Nota, new { @class = "form-control input-sm ", Id = "txtNota" })
                        @Html.ValidationMessageFor(r => r.Nota, "", new { @class = "text-danger" })
