@model Telmexla.Servicios.DIME.Entity.FidelizacionTipificacion
@{
    ViewBag.Title = "Actualizar Tipificación";
    ViewBag.Subtitle = "Fidelizacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ActualizarTipificacion", "Fidelizacion", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Session["Administracion Fidelizacion"] != null)
    {
        <div class="row">
            <div class="col-md-3 text-center">
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Cuenta" onclick="addVar('[:Cuenta:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Servicios" onclick="addVar('[:Servicios:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Serv. Retenidos" onclick="addVar('[:ServiciosRet:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Nom. Cliente" onclick="addVar('[:Titular:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Motivo" onclick="addVar('[:Motivo:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Submotivo" onclick="addVar('[:Submotivo:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Estrategia 1" onclick="addVar('[:Estrategia1:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Estrategia 2" onclick="addVar('[:Estrategia2:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Estrategia 3" onclick="addVar('[:Estrategia3:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Ticket" onclick="addVar('[:Ticket:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Clausula" onclick="addVar('[:Clausula:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Usuario Transfiere" onclick="addVar('[:UsuarioTransfiere:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="Renta" onclick="addVar('[:Renta:]')" /><br />
                <input type="button" class="btn btn-sm btn-success col-sm-9" value="FechaCorte" onclick="addVar('[:FechaCorte:]')" /><br />
            </div>
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="col-md-12">
                            <small>Id Tipificacion</small>
                            @Html.TextBoxFor(m => m.Id, null, new { id = "txtIdTipificacion", @class = "form-control input-sm", @readonly = "true" })
                            @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Nombre</small>
                            @Html.TextBoxFor(r => r.Nombre, null, new { @class = "form-control input-sm ", Id = "txtNombre" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Eliminar</small>
                            @Html.DropDownListFor(r => r.Eliminado, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltEliminado", @class = "form-control" })
                            @Html.ValidationMessageFor(r => r.Eliminado, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <small>Activar</small>
                            @Html.DropDownListFor(r => r.Activo, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltActivo", @class = "form-control" })
                            @Html.ValidationMessageFor(r => r.Activo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <small>Valida Retencion</small>
                            @Html.DropDownListFor(z => z.ValidaRetencion, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltValidaRetencion", @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.ValidaRetencion, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Nota</small>
                            @Html.TextAreaFor(r => r.Nota, new { @class = "form-control input-sm ", Id = "txtNota" })
                            @Html.ValidationMessageFor(r => r.Nota, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12 text-center">

                            @if (Model.Nivel1 == 1)
                            {
                                @: @Html.CheckBox("Contencion", true) Contencion
                        }
                            else
                            {
                                @: @Html.CheckBox("Contencion", false) Contencion
                        }
                            @if (Model.Nivel2 == 1)
                            {
                                @: @Html.CheckBox("Retencion", true) Retencion
                        }
                            else
                            {
                                @: @Html.CheckBox("Retencion", false) Retencion
                        }
                            @if (Model.Nivel3 == 1)
                            {
                                @: @Html.CheckBox("Recuperacion", true) Recuperacion
                        }
                            else
                            {
                                @: @Html.CheckBox("Recuperacion", false) Recuperacion
                        }

                        </div>
                        <div class="col-md-12 text-center" style="padding-top:0.8em">
                            <button id="btnguardarpom" type="submit" class="btn btn-primary" name="Guardar" value="true">Guardar</button>
                            <button id="btnguardarpom" type="button" onclick="redirectList()" class="btn btn-danger" name="Guardar" value="true">Ver Listado</button>
                        </div>
                        <div class="col-md-12 text-center">

                        </div>

                        @*@if (ViewBag.nodoExisteError != null){
                                <div class="alert alert-dange">@ViewBag.nodoExisteError.ToString()</div>
                                <label style="font-size:16px; color:red;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 400;">@ViewBag.nodoExisteError.ToString() </label>
                            }*@



                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    }
    else
    {
        <div class="row">

            <div class="box box-primary">

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="error-page">
                                <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                                <div class="error-content">
                                    <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                    <p style="text-align:justify;">
                                        La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                        Por favor solicite al administrador del sistema el acceso correspondiente.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
@section Scripts{
<script src="~/Scripts/Fidelizacion/CrearTipificacion.js?v=1.0.0"></script>
    <script src="~/Scripts/Fidelizacion/CrearSubmotivoCancelacion.js?1.0.0"></script>
    <script>
        redirectList = function () {
            window.location.href = 'ListarTipificacion';
        }
    </script>

}