                    <div class="col-md-12 text-center">
                        
                        @if (Model.Nivel1 == 1)
                        {
                            @: @Html.CheckBox("Contencion", true) Contencion
                        }
                        else{
                            @: @Html.CheckBox("Contencion", false) Contencion
                        }
                        @if (Model.Nivel2 == 1)
