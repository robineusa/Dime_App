@model Telmexla.Servicios.DIME.Entity.FidelizacionTipificacion
@{
    ViewBag.Title = "Crear Tipificacion";
    ViewBag.SubTitle = "Procesos Fidelización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearTipificacion", "Fidelizacion", FormMethod.Post, new { id = "formCrearTipificacion", role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Session["Administracion Fidelizacion"] != null)
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="col-md-12">
                            <small>Nombre Tipificacion</small>
                            @Html.TextBoxFor(z => z.Nombre, null, new { @class = "form-control input-sm ", Id = "txtTipificaccion" })
                            @Html.ValidationMessageFor(z => z.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Valida Retencion</small>
                            @Html.DropDownListFor(z => z.ValidaRetencion, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltValidaRetencion", @class = "form-control" })
                            @Html.ValidationMessageFor(z => z.ValidaRetencion, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Nota Plantilla</small>
                            @Html.TextAreaFor(z => z.Nota, new { @class = "form-control input-sm ", Id = "txtNota" })
                            @Html.ValidationMessageFor(z => z.Nota, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Nivel que aplica</small>
                        </div>
                        <div class="col-md-12 text-center">
                            @Html.CheckBox("Contencion") Contencion
                            @Html.CheckBox("Retencion") Retencion
                            @Html.CheckBox("Recuperacion") Recuperacion

                        </div>
                        <div class="col-md-12 text-center" style="padding-top:0.8em">
                            <button id="btnguardarpom" type="submit" class="btn btn-danger" name="Guardar" value="true">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    }
    else
    {
        <div class="row">

            <div class="box box-primary">

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="error-page">
                                <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                                <div class="error-content">
                                    <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                    <p style="text-align:justify;">
                                        La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                        Por favor solicite al administrador del sistema el acceso correspondiente.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}