@{
    ViewBag.Title = "Consulta de solicitudes por cliente";
    ViewBag.Subtitle = "Procesos Cierre de Ciclo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Registrar Solicitud Inventario"] != null)
{

    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <table>
                                <tr>
                                    <td style="width:400px; padding:1px;">
                                        <small>Cuenta Cliente:</small>
                                        <input type="text" class="form-control input-sm" id="Cuenta" placeholder="Ingrese la cuenta del Cliente" name="Cuenta" />
                                    </td>

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="page-header" style="margin-top:25px"><i class="fa fa-list-alt"></i> Solicitudes registradas por Cliente:</h2>
                                <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                    <div class="box-body">
                                        <div id="dataLoading" style="display:none;text-align:center;width:100%;height:auto;">
                                            <div><img src="~/Resources/Images/Loading.gif" height="100" width="100" /></div>
                                        </div>
                                        <div id="gridViewConsulta"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    @section scripts{
        <script>var UrlSolicitudesPorCliente = '@Url.Action("ConsultaSolicitudesPorClienteJson", "VerificacionDeInventario")';</script>

        <script src="~/Scripts/Gestion_Blending/jquery.datetimepicker.full.js?1.0.1"></script>
        <link href="~/Styles/Elements/jquery.datetimepicker.css?1.0.1" rel="stylesheet" />
        <script src="~/Scripts/VerificacionDeInventario/ConsultaSolicitudesPorCliente.js?1.0.1"></script>
    }
}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}