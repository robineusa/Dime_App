@model Telmexla.Servicios.DIME.Entity.BuscarCuentasViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TableBuscarCuentas</title>
</head>
<body>
    <div> 

    <table id="buscarCuentaTable">
            @if (Model.Cuentas.Count > 0)
            {
                <tr>
                    <th>Seleccione</th>
                    <th>Cuenta</th>
                    <th>Nombre del Cliente</th>
                    <th>Cedula</th>
                    <th>Teléfono</th>
                    <th>Dirección de Instalación</th>
                </tr>
                string actionName = ViewBag.ActionName.ToString();
                string controllerName = ViewBag.ControllerName.ToString();

                foreach (var cuenta in Model.Cuentas)
                {
                    <tr>
                        <td>@Html.ActionLink("Select", actionName,controllerName, new { choosenCuenta = cuenta.Cuenta},null)</td>
                        <td>@cuenta.Cuenta</td>
                        <td>@cuenta.Nombre</td>
                        <td>@cuenta.Cedula</td>
                        <td>@cuenta.Telefono1</td>
                        <td>@cuenta.DirInstalacion</td>
                    </tr>

                }

            }

        </table>
    </div>


    <script>
        $(document).ready(function () {
            console.log("en table ready ready");
            console.log("@ViewBag.ActionName");



        })


    </script>
</body>
</html>
