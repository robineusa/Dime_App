@model Telmexla.Servicios.DIME.Entity.ViewModelBanner
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Claro_Video</title>
    
    @Styles.Render("~/AdminLTEbootstrap/css")
    @Styles.Render("~/AdminLTEdist/css")
    @Styles.Render("~/AdminLTEdist/css/skins")
  
  
    <link href="~/Styles/Elements/Dime2.css?1.1.6" rel="stylesheet" />
    <link href="~/AdminLTE/plugins/ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/AdminLTE/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
  
</head>
<body>
    @using (Html.BeginForm("ClaroVideo", "Banner", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        if (ViewBag.GuardadoClaroVideo == "SIN GUARDAR")
        {
        <div>
            <hr />
            <div class="box-header ui-sortable-handle" style="cursor: inherit;">
                <i class="fa fa-user-plus"></i>
                <h3 class="box-title">Beneficios</h3>
            </div>
            <iframe id="Iframe1" style="border:none; width: 98%; height:1100px;" src="https://comunidadvirtual.claro.com.co/www/lms/Biblioteca/Documentos/others/M_Servicio/Residencial/Boletines/Comunicados%20-%202016/c1136/index.html"></iframe>
            <br />
            <br />
            <div class="box-header ui-sortable-handle" style="cursor: inherit;">
                <i class="fa fa-phone"></i>
                <h3 class="box-title">Servicio</h3>
            </div>
            <div class="callout" style="margin-bottom: 0 ;border-color: #d4a057 !important;background-color:gainsboro !important; color: black !important; width: 98%;">
                <div class="row">
                    <div class="col-xs-2" style="width:auto;color:black; margin-left: -5px;">

                        <small>El cliente acepto el ofrecimiento:</small>
                    </div>

                    <br />
                    <div class="form-group" style="margin-left: 10px;">
                        @Html.DropDownListFor(m => m.ActivacionClaroVideo.AceptacionClaroVideo, new @List<SelectListItem>{ new SelectListItem{Text="SI", Value="SI" },
                            new SelectListItem{Text="NO", Value="NO" } }, "",
                      new { @class = "form-control input-sm", @style = "width:20%" })
                        @Html.ValidationMessageFor(m => m.ActivacionClaroVideo.AceptacionClaroVideo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group" style="margin-left: 5px;">
                        @Html.TextBoxFor(m => m.ClientesTodo.Cuenta, null, new { id = "cuentaCliente", @class = "form-control input-sm", @style = "display: none" })
                    </div>
                </div>
            </div>
            <br />
            <button id="btnSubmitActivacionClaroVideo" type="submit" class="btn btn-primary" name="cambiarDatos" value="true" style="width:10%; height:40px;">Guardar</button>
        </div>
        }
        else
        {
            <div class="row">
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="error-page">
                                    <h2 class="headline text-green" style="margin-top:-18px;">505</h2>
                                    <div class="error-content" style="text-align:center;">
                                        <h3><i class="ion-happy-outline text-green"></i> Super! Registro Almacenado.</h3>
                                        <p style="text-align:center;margin-top:20px;">
                                            La información que enviaste fue almacenada satisfactoriamente, ahora puedes continuar con tu gestión.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</body>
</html>

