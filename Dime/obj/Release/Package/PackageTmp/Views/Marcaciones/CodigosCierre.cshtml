@model  Telmexla.Servicios.DIME.Entity.PqrMaestroCodCierreCollection
@{
    ViewBag.Title = "Códigos de Cierre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["Administracion Marcaciones"] != null)
{
<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">
                        <a href=@Url.Action("AgregarActuCodigoCierre", "Marcaciones") style="margin-right:15px; float:right;">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> <span class="glyphicon-class" style="font-size:medium;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Agregar Nuevo Código de Cierre</span>
                        </a><br /><br />
                        <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                            <br />
                            <div id="codigosGridView" style="margin:15px">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


                    @section scripts{
                        <script>
        var listaCodigos = @Html.Raw(Json.Encode(Model));
                        </script>

                        <script src="~/Scripts/Marcaciones/Codigos.js?1.0.8"></script>
                    }
}
else
{
    <div class="row">
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}