@model Telmexla.Servicios.DIME.Entity.ViewModelBackElite
@{ ViewBag.Title = "Administración Distribuciones Back Elite";
    ViewBag.SubTitle = "Procesos Back Elite";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Distribucion Back Elite"] != null)
{
    using (Html.BeginForm("AdministrarDistrubucionBackElite", "BackElite", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                @if (ViewBag.Eliminar != null)
                                {
                                    <table>
                                        <tr>
                                            <td style="padding-left:4px; width:200px;">
                                                <small>Id</small>
                                                @Html.TextBoxFor(m => m.BEMDistribuciones.Id, new { @class = "form-control input-sm", @Id = "Id", @readonly = "true" })
                                               
                                            </td>
                                            <td style="padding-left:4px; width:200px;">
                                                <small>Cédula Usuario</small>
                                                @Html.TextBoxFor(m => m.BEMDistribuciones.CedulaUsuario, new { @class = "form-control input-sm", @Id = "Cedula", @readonly = "true" })
                                            </td>
                                            <td style="padding-left:4px; width:300px;">
                                                <small>Tipo de Escalamiento</small>
                                                @Html.TextBoxFor(m => m.BEMDistribuciones.TipoEscalamientoAsignado, new { @class = "form-control input-sm", @Id = "Cedula", @readonly = "true" })
                                            </td>

                                        </tr>
                                    </table>
                                }
                                else
                                {
                                <table>
                                    <tr>
                                        <td style="padding-left:4px; width:200px;">
                                            <small>Id</small>
                                            @Html.TextBoxFor(m => m.BEMDistribuciones.Id, new { @class = "form-control input-sm", @Id = "Id", @readonly = "true" })
                                        </td>
                                        <td style="padding-left:4px; width:200px;">
                                            <small>Cédula Usuario</small>
                                            @Html.TextBoxFor(m => m.BEMDistribuciones.CedulaUsuario, new { @class = "form-control input-sm", @Id = "Cedula"})
                                        </td>
                                        <td style="padding-left:4px; width:300px;">
                                            <small>Tipo de Escalamiento</small>
                                            @Html.DropDownListFor(m => m.BEMDistribuciones.TipoEscalamientoAsignado, new List<SelectListItem> { }, "--SELECCIONE--", new { Id = "TipodeSolicitud", @class = "form-control" })
                                        </td>

                                    </tr>
                                </table>
                                <table>
                                    <tr>
                                        <td colspan="6">
                                            <h5 class="text-danger">  <b>  @ViewBag.Validacion</b></h5>
                                        </td>
                                    </tr>
                                </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <button id="submitDatos" type="submit" class="btn btn-primary" value="true" style="width:10%; height:40px;">Guardar Datos</button>

    }
    @section scripts{
@Scripts.Render("~/AdminLTEplugins/jquery-validate/js")
        <script>
            var UrlListaTipoDeEscalamientosJson = '@Url.Action("ListaTipoDeEscalamientosJson", "BackElite")';
        </script>
        <script src="~/Scripts/BackElite/AdministrarDistrubucionBackElite.js?1.0.0"></script>

    }
}

else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



