
@{
    ViewBag.Title = "Formulario para la Consulta de Casos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <table>
        <tr>
            <td style="width:200px;padding:5px;">Cuenta Cliente:</td>
            <td style="width:200px;padding:5px;">Id de Ingreso:</td>
            @if (Session["ModoLogin"] != null && Session["ModoLogin"].ToString().Equals("1"))
