            }
        </tr>
        <tr>
            <td style="width:200px; padding:5px;" >
                <input  type="text" class="form-control"  id="cuentaCliente"/>
            </td>
            <td style="width:200px;padding:5px;">
                <input type="text" class="form-control" id="idIngreso" />
            </td>
            @if (Session["ModoLogin"] != null && Session["ModoLogin"].ToString().Equals("1"))
            {
                <td style="width:200px; padding:5px;">
