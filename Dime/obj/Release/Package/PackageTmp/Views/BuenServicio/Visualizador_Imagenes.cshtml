@model Telmexla.Servicios.DIME.Entity.ViewModelNotificacionesBS
@{
    ViewBag.Title = "Visualizador Imágenes";
    ViewBag.Subtitle = "Pieza Buen Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Session["Notificaciones Buen Servicio"] != null)
{
<div class="row">
    <div class="col-md-8">
        <div class="box box-danger" >
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-file-image-o"></i> Imágen</h3>
                <div class="box-tools pull-right">
                </div>
                <br />
                <br />
                <div id="3_ofre" style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px; ">
                    <br />
                    <a href="@ViewBag.Url" target="_blank">
                        <img id="imagenCargada" src="@ViewBag.NombreImagen" style="width:100%; margin-top:10px; display:block; height:600px;" />
                    </a>
                </div>

                <button id="NotificarBS" class="btn btn-primary btn-lg" style="width:20%; margin-left: 79%; margin-top:10px;" > Notificar </button>
                
            </div>
        </div>
    </div>

    
    <div class="col-md-4">
        <div class="box box-danger direct-chat direct-chat-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Chat Notificaciones Globales</h3>
                <div class="box-tools pull-right">
                    @*<span data-toggle="tooltip" title="3 New Messages" class="badge bg-red">3</span>*@
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    @*<button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle">
                        <i class="fa fa-comments"></i>
                    </button>*@ 
                    @*<button type="button" class="btn btn-box-tool" data-widget="remove">
                        <i class="fa fa-times"></i>
                    </button>*@
                </div>
            </div>
            <div class="box-body" style="display: block;">
                <div id="AdministradorBS" class="direct-chat-messages">
                    
                </div>
                <div class="direct-chat-contacts">
                    <ul class="contacts-list">
                        <li>
                            <a href="#">
                                <img class="contacts-list-img" src="/AdminLTE/dist/img/user.svg">
                                <div class="contacts-list-info">
                                    <span class="contacts-list-name">
                                        Count Dracula
                                        <small class="contacts-list-date pull-right">2/28/2015</small>
                                    </span>
                                    <span class="contacts-list-msg">How have you been? I was...</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="box-footer" style="display: block;">
                
                    <div class="input-group">
                        <input id="MensajeBS" name="message" placeholder="Escribe un mensaje... " class="form-control" type="text">
                        <span class="input-group-btn">
                            <button id="EnviarMSGlobalBS" type="button" class="btn btn-danger btn-flat">Enviar</button>
                        </span>
                    </div>
                
            </div>

        </div>
    </div>
     
</div>

<script>
    var NameImage = @Html.Raw(Json.Encode(Model.NotificacionBuenServicio.Nombre_Imagen))
    var LinkDir = @Html.Raw(Json.Encode(Model.NotificacionBuenServicio.Link_Direccionamiento));
    var Id = @Html.Raw(Json.Encode(Model.NotificacionBuenServicio.Id));
    var Description = @Html.Raw(Json.Encode(Model.NotificacionBuenServicio.Descripcion));


</script>

@section Scripts{
    <script src="~/Scripts/BuenServicio/Visualizador_Imagenes.js?1.0.3"></script>
    <script src="~/AdminLTE/plugins/jquery-ui/js/jquery-ui.js"></script>
    <script src="~/Scripts/Signal/jquery.signalR-2.2.1.js"></script>
    <script src="~/Scripts/Signal/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    
    
}
}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}