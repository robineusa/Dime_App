                                        @Html.TextBoxFor(m => m.LiberacionHomePass.TelefonoCelular, null, new { id = "cd_telefonocelular", @class = "form-control input-sm" })
                                    </td>

                                </tr>
                                <tr>
                                    <td width="200" style="padding:1px;">
                                        <small>Motivo Liberación:</small>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DropDownListFor(m => m.LiberacionHomePass.MotivoLiberacion, new List<SelectListItem> {new SelectListItem{Text="CANCELACION", Value="CANCELACION" },
                                                                                             new SelectListItem{Text="HHPP OCUPADO", Value="HHPP OCUPADO" },
                                                                                             new SelectListItem{Text="MORA MAYOR A 90 DIAS", Value="MORA MAYOR A 90 DIAS" } },
                                                                                                       "--SELECCIONE--", new { @class = "form-control input-sm" })
