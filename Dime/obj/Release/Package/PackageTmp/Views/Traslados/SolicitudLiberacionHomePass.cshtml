                                </tr>
                                <tr>
                                    <td width="1000" style="padding:1px;" colspan="5">
                                        <small>Observaciones:</small>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="1000" colspan="5">
                                        @Html.TextBoxFor(m => m.LiberacionHomePass.Observacion, null, new { id = "cd_observaciones", @class = "form-control input-sm", @style = "text-transform:uppercase;height:50px;min-height:50px;max-height:50px;" })
