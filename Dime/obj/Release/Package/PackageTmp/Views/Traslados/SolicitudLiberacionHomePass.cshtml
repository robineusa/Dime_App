                            <label style="font-size:16px; color:red;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 400;">@ViewBag.NodoRepetidoError.ToString() </label>
                        }
                        @if (ViewBag.CuentayaescaladaError != null)
                        {
                            <label style="font-size:16px; color:red;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 400;">@ViewBag.CuentayaescaladaError.ToString() </label>
                        }
                        
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.Direccion, "", new { @class = "text-danger" })<br />
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.Nodo, "", new { @class = "text-danger" })<br />
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.TelefonoCelular, "", new { @class = "text-danger" }) <br />
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.TelefonoFijo, "", new { @class = "text-danger" })<br />
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.CuentaOcupa, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(m => m.LiberacionHomePass.CuentaTraslada, "", new { @class = "text-danger" })


