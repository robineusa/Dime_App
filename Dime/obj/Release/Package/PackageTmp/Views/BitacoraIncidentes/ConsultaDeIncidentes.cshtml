@{ ViewBag.Title = "Consulta de Incidentes por SD";
    ViewBag.SubTitle = "Procesos - COS";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <table>
                                <tr>
                                    <td style="width:300px; padding:1px;">
                                        <small>Caso SD:</small>
                                        <input type="text" class="form-control input-sm" id="SD" placeholder="Ingrese el caso SD" name="SD" />
                                    </td>

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="page-header" style="margin-top:25px"><i class="fa fa-list-alt"></i> Resultados Relacionados:</h2>
                                <div style="background-color:#dcdcdc; padding-left:10px; padding-bottom:10px; margin-top:-10px; margin-left: -10px; padding-right:10px;">
                                    <div class="box-body">
                                        <div id="dataLoading" style="display:none;text-align:center;width:100%;height:auto;">
                                            <div><img src="~/Resources/Images/Loading.gif" height="100" width="100" /></div>
                                        </div>
                                        <div id="gridViewConsulta"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button id="submitDatos" type="submit" class="btn btn-primary" value="true" style="width:10%; height:40px; display:none;">Guardar Datos</button>


        @section scripts{
            <script>
                var UrlTraerIncidentePorSDJson = '@Url.Action("TraerIncidentePorSDJson", "BitacoraIncidentes")';
            </script>
            <script src="~/Scripts/BitacoraIncidentes/ConsultaDeIncidentes.js?1.1.0"></script>}
