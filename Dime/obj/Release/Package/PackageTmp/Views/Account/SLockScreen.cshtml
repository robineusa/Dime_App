
<html>


<body>
    @using Dime.Extensions
    @{
        ViewBag.Title = "Account";
        ViewBag.SubTitle = "Lockscreen";
    }


    <a href="#ventanaPrincipal" class="btn btn-primary btn-lg" data-toggle="modal" id="modalActivar" style="visibility:hidden" data-backdrop="static" data-keyboard="false">Ver Modal</a>

    <div class="hold-transition lockscreen modal fade" id="ventanaPrincipal">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

            <div class="lockscreen-logo">
                <img src="~/Resources/Images/Logo.png" width="300" height="300" /><br />
            </div>
          
            <div class="lockscreen-item">
          
                <div class="lockscreen-image">
                    <img src="~/AdminLTE/dist/img/user.svg" width="100" height="100" >
                </div>
                <div class="lockscreen-credentials">
                    <div class="input-group">
                        <input type="password" class="form-control" placeholder="Contraseña" id="lockPassword">
                        <div class="input-group-btn">
                            <button type="button" class="btn" id="bUnlock"><i class="fa fa-arrow-right text-muted"></i></button>
                        </div>
                    </div>
                </div>
               
            </div>
            <label style="color:red; display:none" id="contraIncorrecta">La contraseña es incorrecta</label>

            <div class="help-block text-center">
                Ingrese su contraseña para recuperar la sesión
            </div>
            <div class="text-center">
                <a href="@Url.Action("Login", "Account")">O inicie sesión con un usuario diferente</a>
            </div>
       
    </div>
    <script>
        var urlCerrarSesion = '@Url.Action("LogOff", "Account")';
        var urlUnlockScreen = '@Url.Action("UnlockScreen","Account")';
        var cedulaUsuario = '@Session["Usuario"]';
    </script>
    <script src="~/Scripts/Account/SLockScreen.js?1.0.2"></script>
</body>
</html>

