
@{
    ViewBag.Title = "Registro Preguntas De Seguridad";
    Layout = "~/Views/Shared/_RecordarContrasena.cshtml";
}

<div class="box box-danger">
    <div class="box-header with-border bg-gray-light">
        <h4 class="box-title">
            Este formulario te va a permitir realizar el ingreso de preguntas de seguridad para su cuenta registrada. No podrás iniciar mientras no se encuentren estas preguntas registradas en el sistema. 
        </h4>
    </div>
    <br />
    <div id="shareRegistrarPreguntas"> </div>
</div>




@section scripts{

    <script>

        $(document).ready(function() {
            var scopeId = @ViewBag.IdUsuario;
            var datosFullUsuario  = "@ViewBag.DatosFullUsuario";
            var sesionUsuario = @ViewBag.SesionUsuario;
            $.ajax({
                type: "GET",
                url: '/Account/SRegistroPreguntasDesbloqueo',
                contentType: "application/json; charset=utf-8",
                data: { idUsuario:scopeId, datosFullUsuario:datosFullUsuario, sesionUsuario:sesionUsuario } ,
                dataType: "html",
                success: function (result) {
                    $('#shareRegistrarPreguntas').html(result);
                }
            });
        })

    </script>

}
