
@{
    ViewBag.Title = "Recordar Contraseña";
    Layout = "~/Views/Shared/_RecordarContrasena.cshtml";
}
@Styles.Render("~/AdminLTEdist/css")
@Styles.Render("~/AdminLTEdist/css/skins")
<div class="box box-danger">
    <div class="box-header with-border">
        <h4 class="box-title">Para recuperar tu contraseña, responda las preguntas de seguridad de acuerdo a las respuestas que tienes registradas en el sistema.</h4>
    </div>
    <div class="box-body">
        <div class="form-group">
            <label>Usuario:</label>
            <div class="row">
                <div class="col-md-5">
                    <input type="text" class="form-control" placeholder="Ingrese su Cédula" autocomplete="off" id="tbCedula" />
                </div>
            </div>
        </div>
      
        <input type="submit" class="btn btn-danger" value="Aceptar" id="btnCedula" />
        <br />
        <br />
            <div id="shareRecordarContra"> </div>
     </div>
</div>


@section scripts{

        <script>
            $("#btnCedula").on("click", function () {
                console.log("entra al log window");

                var scopeCedula = $("#tbCedula").val();
                $("#tbCedula").prop('disabled', true);
                $("#btnCedula").attr("style", "display:none");
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("ObtenerRecordarContra", "Account")',
                    contentType: "application/json; charset=utf-8",
                    data: { cedula: scopeCedula },
                    dataType: "html",
                    success: function (result) {
                  
                        $('#shareRecordarContra').html(result);
                        }
                });
            })

        </script>

    }
