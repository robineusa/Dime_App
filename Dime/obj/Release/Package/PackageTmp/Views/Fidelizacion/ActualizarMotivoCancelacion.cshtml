@model Telmexla.Servicios.DIME.Entity.FidelizacionMotivosCancelacion
@{
    ViewBag.Title = "Actualizar Motivo Cancelacion";
    ViewBag.Subtitle = "Fidelizacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ActualizarMotivoCancelacion", "Fidelizacion", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Session["Administracion Fidelizacion"] != null)
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="col-md-12">
                            <small>Id Motivo</small>
                            @Html.TextBoxFor(m => m.Id, null, new { id = "txtMotivoCancelacion", @class = "form-control input-sm", @readonly = "true" })
                            @Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-12">
                            <small>Motivo</small>
                            @Html.TextBoxFor(m => m.Motivo, null, new { @class = "form-control input-sm ", Id = "txtMotivo" })
                            @Html.ValidationMessageFor(m => m.Motivo, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12">
                            <small>Mostrar Otros Ofrecimientos</small>
                            @Html.DropDownListFor(m => m.OtrosOfrecimientos, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0" } }, new { Id = "sltOtrosOfrecimientos", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OtrosOfrecimientos, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Adjuntar Campos Adicionales</small>
                            @Html.DropDownListFor(m => m.OtrosCampos, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltOtrosCampos", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.OtrosCampos, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Eliminar</small>
                            @Html.DropDownListFor(m => m.Eliminado, new List<SelectListItem> { new SelectListItem { Text = "SI", Value = "1", Selected = true }, new SelectListItem { Text = "NO", Value = "0", Selected = false } }, new { Id = "sltOtrosCampos", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Eliminado, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-12 text-center" style="padding-top:0.8em">
                            <button id="btnguardarpom" type="submit" class="btn btn-primary" name="Guardar" value="true">Guardar</button>
                            <button id="btnguardarpom" type="button" onclick="redirectList()" class="btn btn-danger" name="Guardar" value="true">Ver Listado</button>
                        </div>
                        <div class="col-md-12 text-center">

                        </div>

                        @*@if (ViewBag.nodoExisteError != null){
                                <div class="alert alert-dange">@ViewBag.nodoExisteError.ToString()</div>
                                <label style="font-size:16px; color:red;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 400;">@ViewBag.nodoExisteError.ToString() </label>
                            }*@



                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    }
    else
    {
        <div class="row">

            <div class="box box-primary">

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="error-page">
                                <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                                <div class="error-content">
                                    <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                    <p style="text-align:justify;">
                                        La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                        Por favor solicite al administrador del sistema el acceso correspondiente.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

}
@section Scripts{
    <script>
        redirectList = function () {
            window.location.href = 'ListarMotivosCancelacion';
        }
    </script>

}