@model Telmexla.Servicios.DIME.Entity.FidelizacionOtrosCampos
@{
    ViewBag.Title = "Crear OtrosCampos";
    ViewBag.SubTitle = "Procesos Fidelización";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CrearOtrosCampos", "Fidelizacion", FormMethod.Post, new { id = "formCrearOtrosCampos", role = "form" }))
{
    @Html.AntiForgeryToken()
    if (Session["Administracion Fidelizacion"] != null)
    {
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="box box-danger">
                    <div class="box-body">
                        <div class="col-md-12">
                            <small>Etiqueta</small>
                            @Html.TextBoxFor(c => c.Nombre, null, new { @class = "form-control input-sm ", Id = "txtNombre" })
                            @Html.ValidationMessageFor(c => c.Nombre, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Tipo de Campo</small>
                            @Html.DropDownListFor(m => m.Tipo, new List<SelectListItem> {
                               new SelectListItem { Text = "-Seleccione-", Value = "0", Selected = true },
                               new SelectListItem { Text = "Numerico", Value = "Numero", Selected = false },
                               new SelectListItem { Text = "Alfanumerico", Value = "Alfanumero", Selected = false },
                               new SelectListItem { Text = "Listado", Value = "Listado", Selected = false }
                            }, new { Id = "sltTipo", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Tipo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <small>Opciones</small>
                            @Html.TextAreaFor(m => m.Opciones, new { Id = "sltOpciones", @class = "form-control", placeholder = "Si es un listado separe las opciones con comas\nSi es Caja de Texto indique el tamaño" })
                            @Html.ValidationMessageFor(m => m.Opciones, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12 text-center">
                            @Html.CheckBox("Contencion") Contencion
                            @Html.CheckBox("Retencion") Retencion
                            @Html.CheckBox("Recuperacion") Recuperacion
                        </div>
                        <div class="col-md-12 text-center">
                            <button id="btnguardarpom" type="submit" class="btn btn-primary" name="Guardar" value="true">Guardar</button>
                        </div>

                        @*@if (ViewBag.nodoExisteError != null){
                                <div class="alert alert-dange">@ViewBag.nodoExisteError.ToString()</div>
                                <label style="font-size:16px; color:red;font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 400;">@ViewBag.nodoExisteError.ToString() </label>
                            }*@



                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    }
    else
    {
        <div class="row">

            <div class="box box-primary">

                <div class="box-body">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="error-page">
                                <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                                <div class="error-content">
                                    <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                    <p style="text-align:justify;">
                                        La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                        Por favor solicite al administrador del sistema el acceso correspondiente.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}