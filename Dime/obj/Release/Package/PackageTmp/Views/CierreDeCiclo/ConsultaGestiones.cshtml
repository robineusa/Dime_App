@model Telmexla.Servicios.DIME.Entity.CCConsultaGestionesViewModel
@{
    ViewBag.Title = "Consulta Gestiones de Úsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string actionName = ViewBag.ConsultaPost;
}

@if (Session["Cierre Ciclo Residencial Predictivo"] != null || Session["Cierre Ciclo Instalacion"] != null || Session["Cierre Ciclo Pymes"] != null)
{

    using (Html.BeginForm(actionName, "CierreDeCiclo", FormMethod.Post ) )
    {


<div class="row">
    <div class="col-md-12">
        <div class="box box-danger">
            <div class="box-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-2" style="width: 150px;">
                                <label>Cuenta Cliente:</label>
                            </div>
                    
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <table>
                                    <tr>
                                        <td style="padding:1px;">
                                            @Html.TextBoxFor(m =>m.cuenta , new {@class = "form-group-lg", style= "width:150px;" })
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
    }

}
else
{
    <div class="row">

        <div class="box box-primary">

            <div class="box-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="error-page">
                            <h2 class="headline text-red" style="margin-top:-18px;">502</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> Oops! Acceso Denegado.</h3>
                                <p style="text-align:justify;">
                                    La información que se relaciona en esta vista no es posible visualizarse ya que su perfil no posee el acceso necesario.
                                    Por favor solicite al administrador del sistema el acceso correspondiente.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
