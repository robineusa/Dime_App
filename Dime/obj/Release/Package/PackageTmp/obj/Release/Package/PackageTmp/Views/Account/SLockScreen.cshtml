
<html>


<body>
    @using Dime.Extensions
    @{
        ViewBag.Title = "Account";
        ViewBag.SubTitle = "Lockscreen";
    }


    <a href="#ventanaPrincipal" class="btn btn-primary btn-lg" data-toggle="modal" id="modalActivar" style="visibility:hidden" data-backdrop="static" data-keyboard="false">Ver Modal</a>

    <div class="hold-transition lockscreen modal fade" id="ventanaPrincipal">
        <div class="lockscreen-wrapper">
            <div class="lockscreen-logo">
                <b>Dime</b>
            </div>
            <div class="lockscreen-name">@User.Identity.GetUserNameIdentifier()</div>
            <div class="lockscreen-item">
                <div class="lockscreen-image">
                    <img src="~/AdminLTE/dist/img/user.svg" alt="User Image">
                </div>
                <form class="lockscreen-credentials" onsubmit="return false;">
                    <div class="input-group">
                        <input type="password" class="form-control" placeholder="password" id="lockPassword">
                        <div class="input-group-btn">
                            <button type="button" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="help-block text-center">
                Ingrese su contraseña para recuperar la sesion
            </div>
            <div class="text-center">
                <a href="@Url.Action("Login", "Account")">O inicie sesión con un usuario diferente</a>
            </div>
        </div>
    </div>



  

    <script>

        $('input').on('keydown', function (event) {
   
            var x = event.which;
            if (x === 13) {
                event.preventDefault();
            }
        });

        $(document).ready(function () {

            $("#modalActivar").click();
            setTimeout(function () {
                console.log("a fgocus");
                $("#lockPassword").focus();
            }, 1000);
         
        })
    </script>

</body>
</html>

